<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ramonsl.appmusicu.PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="12dp"
        android:background="@color/primary_light"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgAlbum"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/cd_vera" />

                <TextView
                    android:id="@+id/txtGenero"
                    style="@style/faixas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gênero: Rock" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAlbum"
                    style="@style/Titulos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vera Louca - Ao Vivo" />

                <TextView
                    android:id="@+id/txtDesc"
                    style="@style/faixas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A Vera Loca é uma banda de música pop e Rock'n Roll que sabe estabelecer estes diálogos com multiplicidade de referências" />

                <TextView
                    android:id="@+id/txtLanca"
                    style="@style/faixas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lançamento: 10 de março de 2015" />

                <TextView
                    android:id="@+id/txtGravadora"
                    style="@style/faixas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gravadora: Radar Records" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:background="@color/primary_light">

        <TextView
            android:id="@+id/txtMeio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/app_meioPagamento"
            android:textSize="16sp"
            android:textStyle="bold" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/cbGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Pagar com o Google"
                android:textColor="@color/primary_text" />

            <RadioButton
                android:id="@+id/cbCartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Usando seu Cartão final 0011"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/txtOutra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Adicionar outra forma de pagamento"
                android:textColor="@color/primary_text" />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@color/accent"
        android:text="Pagar R$24,90"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:textStyle="bold" />


</LinearLayout>
